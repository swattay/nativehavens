/*##########################################################################################################
============================================================================================================
Client-Side Display Elements
------------------------------------------------------------------------------------------------------------
>> This is the default stylesheet for all
>> visitor-facing elements on the website
>> itself (i.e. checkout system).
============================================================================================================
##########################################################################################################*/


/*################################################################################################
--------------------------------------------------------------------------------------------------
>> General
--------------------------------------------------------------------------------------------------
################################################################################################*/

.text {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 9pt;
}

.sohotext {
	font-family : Arial;
	font-size: 9pt;
}

.SMtext {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 8pt;
}

.smtext {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 8pt;
}

.uptext {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 7pt;
	color: darkgreen;
}

.FormLt1 {
	font-family : Arial;
	font-size : 8pt;
	cursor: hand;
}

a:link {color: #A76210; text-decoration:none; border-bottom:1px solid #2C2D2F;}
a:visited {color: #A76210; text-decoration:none; border-bottom:1px solid #2C2D2F;}
a:hover {color: #2E2E31; text-decoration:none; border-bottom:1px solid #2E2E31;}
a:active {color: #B16B15; text-decoration:none; border-bottom:1px solid #2E2E31;}

/*################################################################################################
--------------------------------------------------------------------------------------------------
>> Menu System - #VMENU#
--------------------------------------------------------------------------------------------------
################################################################################################*/

/*================================================================================
>> General
================================================================================*/

/* This is the main vmenu table */
table.vmenu_mainz {
   width: 100%;
   font-family: Verdana, arial, helvetica, sans-serif;
   letter-spacing:1px;
   font-size: 12px;
   padding: 5px 5px 5px 5px; 
   border-left: 0px solid #3A3A3A;
}

/* This cell contains the submenu table */
td.vmenu_main_sub {
   width: 100%;
   border: 0px;
   padding: 0px 0px 0px 0px;
}

/* Contains all sub links. */
/* Placed within a single td (vmenu_main_sub) of the main link table (vmenu_mainz) */
table.vmenu_subz {
   font-size: 11px;
   width: 100%;
   border: 0px;
   padding: 0px 0px 0px 0px;
}

/*================================================================================
>> Main Menu Links
================================================================================*/

td.vmenu_main_off {   width: 100%;
   border: 0px;
   padding: 8px 5px 0px 10px;
}

td.vmenu_main_on {
   width: 100%;
   border: 0px;
   padding: 8px 5px 0px 10px;
}

div.vmenu_main_off {
   width: 100%;
   font-size: 13px;
   font-weight: normal;
}

div.vmenu_main_on {
   width: 100%;
   font-size: 13px;
   font-weight: bold;
}


a.vmenu_main_off:link {text-decoration:none;  border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_off:visited {text-decoration:none; border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_off:hover {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_off:active {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #B16B15;}

a.vmenu_main_on:link {text-decoration:none;  border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_on:visited {text-decoration:none; border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_on:hover {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #2C2D2F;}
a.vmenu_main_on:active {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #B16B15;}




/*================================================================================
/* Sub Menu Bullets
================================================================================*/

/* Sub menu bullets */
td.vmenu_sub_bull_off {
   width: 20px;
   padding: 3px 0px 0px 15px;
}

td.vmenu_sub_bull_on {
   width: 20px;
   padding: 3px 0px 0px 15px;
}

div.vmenu_sub_bull_off {
   font-size: 11px;
   color: #858585;
   font-weight: bold;
}

div.vmenu_sub_bull_on {
   font-size: 11px;
   color: #505050;
   font-weight: bold;
}

/*================================================================================
/* Sub Menu Links
================================================================================*/
td.vmenu_sub_off {
   width: 100%;
   border: 0px;
   padding: 3px 2px 0px 1px;
}

td.vmenu_sub_on {
   width: 100%;
   border: 0px;
   padding: 3px 2px 0px 1px;
}

div.vmenu_sub_off {
   width: 100%;
   border: 0px;
   padding: 0px 0px 0px 0px;
   font-size: 12px;
   font-weight: normal;
}

div.vmenu_sub_on {
   width: 100%;
   border: 0px;
   padding: 0px 0px 0px 0px;
   font-size: 12px;
   font-weight: bold;
}

a.vmenu_sub_off:link {text-decoration:none;  border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_off:visited {text-decoration:none; border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_off:hover {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_off:active {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #B16B15;}

a.vmenu_sub_on:link {text-decoration:none;  border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_on:visited {text-decoration:none; border-bottom: 1px solid #D6BDA1; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_on:hover {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #2C2D2F;}
a.vmenu_sub_on:active {text-decoration:none; border-bottom: 1px solid #A76210; font-weight: normal; color: #B16B15;}


